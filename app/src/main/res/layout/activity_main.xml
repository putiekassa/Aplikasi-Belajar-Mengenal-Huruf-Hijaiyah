<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.tumpex.belajarmengaji.BelajarActivity">

    <ImageButton
        android:layout_width="700dp"
        android:layout_height="500dp"
        android:background="@drawable/logo111"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"

    <TextView
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:background="@drawable/IKON3"
        android:id="@+id/buttonicon1"
        android:layout_marginRight="132dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="83dp"
        android:layout_alignBottom="@+id/logo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:background="@drawable/IKON5"
        android:id="@+id/logo"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/buttonicon1"
        android:layout_alignStart="@+id/buttonicon1" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:background="@drawable/IKON5"
        android:id="@+id/logo"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/buttonicon1"
        android:layout_alignStart="@+id/buttonicon1" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/IKON1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonIKON1" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/IKON2"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonIKON2" />

</RelativeLayout>
